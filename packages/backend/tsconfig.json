{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/shared/types/*": ["../../shared/types/src/*"],
      "@/shared/utils/*": ["../../shared/utils/src/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../shared/types/src/**/*",
    "../../shared/utils/src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}